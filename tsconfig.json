{
  "compilerOptions": {
    "target": "ESNext",                      
    "module": "CommonJS",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",               
    "jsx": "react",                           
    "outDir": "./dist",                       
    "declaration": true,                      
    "declarationMap": true                   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
